<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".views.InicioFragment">

    <androidx.appcompat.widget.Toolbar
        android:background="@drawable/shape"
        android:textAlignment="center"
        app:titleTextColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Tiendas"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:paddingBottom="15dp"/>

    </androidx.appcompat.widget.Toolbar>

    <GridLayout
        android:columnCount="2"
        android:layout_marginTop="-40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/lacuracao"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp"
            app:cardElevation="2dp">


            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/lacuracao"
                    android:layout_width="120dp"
                    android:layout_height="120dp"/>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/agencias_way"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp"
            app:cardElevation="2dp">


            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/agencias_way"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tienda_max"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp"
            app:cardElevation="2dp">


            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/max"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tecno_facil"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp"
            app:cardElevation="2dp">


            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/tecnofacil_logo"
                    android:layout_width="130dp"
                    android:layout_height="130dp"/>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>


    </GridLayout>



</LinearLayout>